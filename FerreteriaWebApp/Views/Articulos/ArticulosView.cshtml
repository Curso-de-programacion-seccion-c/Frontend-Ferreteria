<!--Se recibe la lista de articulos del ArticulosController-->
@model List<FerreteriaWebApp.Models.ArticulosModel>

@{
    ViewBag.Title = "Artículos"; // Título de la página
}

<h1>Articulos</h1>

<table class="table table-striped table-bordered table-hover table-striped-columns">
    <!--Encabezado de la tabla-->
    <thead class="bg-warning text-dark">
        <tr>
            <th>ID</th>
            <th>Código</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Descripción</th>
            <th>ID Categoría</th>
            <th>ID Proveedor</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <!--Cuerpo de la tabla-->
    <tbody>
        <!--Foreach recorre cada articulo en la lista de ArticulosModel-->
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdArticulo</td>
                <td>@item.CodeArticulo</td>
                <td>@item.NombreArticulo</td>
                <td>@item.Precio</td>
                <td>@item.Stock</td>
                <td>@item.Descripcion</td>
                <td>@item.IdCategoria</td>
                <td>@item.IdProveedor</td>
                <td>
                    <button class="btn btn-sm btn-info edit-btn"
                            data-id="@item.IdArticulo"
                            data-code="@item.CodeArticulo"
                            data-nombre="@item.NombreArticulo"
                            data-precio="@item.Precio"
                            data-stock="@item.Stock"
                            data-descripcion="@item.Descripcion"
                            data-idcategoria="@item.IdCategoria"
                            data-idproveedor="@item.IdProveedor">
                        <i class="fa fa-pen"></i>
                    </button>
                    <button class="btn btn-sm btn-danger delete-btn" data-id="@item.IdArticulo">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>